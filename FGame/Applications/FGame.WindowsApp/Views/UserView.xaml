    <StackPanel DockPanel.Dock="Right"
                    Width="150">
        <UniformGrid Rows="3"
                         Columns="3">
            <Button Style="{DynamicResource ResourceKey=MoveButtonStyle}"
                        Command="{Binding Path=MoveCommand}"
                        CommandParameter="NW">
                NW
            </Button>
            <Button Style="{DynamicResource ResourceKey=MoveButtonStyle}"
                        Command="{Binding Path=MoveCommand}"
                        CommandParameter="N">
                N
            </Button>
            <Button Style="{DynamicResource ResourceKey=MoveButtonStyle}"
                        Command="{Binding Path=MoveCommand}"
                        CommandParameter="NE">
                NE
            </Button>
            <Button Style="{DynamicResource ResourceKey=MoveButtonStyle}"
                        Command="{Binding Path=MoveCommand}"
                        CommandParameter="W">
                W
            </Button>
            <Button Style="{DynamicResource ResourceKey=MoveButtonStyle}"
                        Command="{Binding Path=MoveCommand}"
                        CommandParameter="Wait">
                Wait
            </Button>
            <Button Style="{DynamicResource ResourceKey=MoveButtonStyle}"
                        Command="{Binding Path=MoveCommand}"
                        CommandParameter="E">
                E
            </Button>
            <Button Style="{DynamicResource ResourceKey=MoveButtonStyle}"
                        Command="{Binding Path=MoveCommand}"
                        CommandParameter="SW">
                SW
            </Button>
            <Button Style="{DynamicResource ResourceKey=MoveButtonStyle}"
                        Command="{Binding Path=MoveCommand}"
                        CommandParameter="S">
                S
            </Button>
            <Button Style="{DynamicResource ResourceKey=MoveButtonStyle}"
                        Command="{Binding Path=MoveCommand}"
                        CommandParameter="SE">
                SE
            </Button>
        </UniformGrid>

        <Button Style="{DynamicResource ResourceKey=CommandButtonStyle}"
                    Command="{Binding Path=ResetCommand}">
            Restart
        </Button>
    </StackPanel>

</UserControl>
