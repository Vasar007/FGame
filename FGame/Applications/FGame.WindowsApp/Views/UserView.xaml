             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:prism="http://prismlibrary.com/"
             xmlns:local="clr-namespace:FGame.WindowsApp.Views"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance viewModels:UserViewModel}">

